@{
    ViewData["Title"] = "Şifre Sıfırlama Onayı";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4 text-center">
                <h2 class="card-title mb-4">Şifre Sıfırlama İsteğiniz Alındı</h2>
                <hr />

                
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Message"]
                    </div>
                }
                else
                {
                    
                    <div class="alert alert-info" role="alert">
                        Şifrenizi sıfırlamak için size bir e-posta gönderildiği bilgisi simüle edilmiştir. Lütfen e-postanızı kontrol edin (Bu, gerçek bir e-posta değildir).
                    </div>
                }


                @if (TempData["ResetToken"] != null && TempData["UserIdForReset"] != null)
                {
                    <div class="alert alert-warning mt-3">
                        **BU BİR SİMÜLASYON LİNKİDİR, GERÇEK E-POSTA GÖNDERİLMEZ.** <br />
                        Şifrenizi sıfırlamak için lütfen bu linke tıklayın: <br />
                        <a href="@Url.Action("ResetPassword", "Account", new { token = TempData["ResetToken"], userId = TempData["UserIdForReset"] })" class="btn btn-sm btn-info mt-2">Şifreyi Sıfırla (@TempData["UserEmailForReset"])</a>
                    </div>
                }

                <div class="mt-4">
                    <p><a asp-action="Login" asp-controller="Account" class="text-decoration-none">Giriş Sayfasına Geri Dön</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}