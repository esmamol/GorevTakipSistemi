@model GorevTakipSistemi.ViewModels.CreateTaskViewModel

@{
    ViewData["Title"] = "Yeni Görev Ekle";
}

<h1>Yeni Görev Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AssignedUserId" class="control-label"></label>
                @* Düzeltme burada yapıldı: asp-items artık ViewBag.AssignedUserId kullanıyor *@
                <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.AssignedUserId">
                    <option value="">-- Kullanıcı Seçin --</option>
                </select>
                <span asp-validation-for="AssignedUserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Görev Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}